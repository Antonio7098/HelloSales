# =============================================================================
# HelloSales Backend Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# Environment
ENVIRONMENT=development

# Database (Docker Compose default)
DATABASE_URL=postgresql+asyncpg://hellosales:hellosales_dev@localhost:5434/hellosales

# Redis
REDIS_URL=redis://localhost:6380/0

# =============================================================================
# WorkOS SSO Configuration (optional for development)
# =============================================================================

# WorkOS Client ID from your WorkOS Dashboard
# Get this from: https://dashboard.workos.com/{org_id}/sso
WORKOS_CLIENT_ID=

# WorkOS API Key from your WorkOS Dashboard
# Get this from: https://dashboard.workos.com/api-keys
WORKOS_API_KEY=

# WorkOS Issuer (typically https://api.workos.com/)
WORKOS_ISSUER=https://api.workos.com/

# Optional: enforce token audience (aud). If empty, audience is not verified.
# Get this from your WorkOS Dashboard if configured
WORKOS_AUDIENCE=

# =============================================================================
# Provider API Keys
# =============================================================================

# Groq - LLM (chat)
GROQ_API_KEY=

# Deepgram - STT (speech-to-text)
DEEPGRAM_API_KEY=

# Google Cloud - TTS (text-to-speech)
GOOGLE_API_KEY=
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
# Comma-separated namespaces to enable debug logging: stt,tts,llm,voice,chat,summary
LOG_DEBUG_NAMESPACES=

# =============================================================================
# A2 Reliability (observe-only)
# =============================================================================
PROVIDER_TIMEOUT_LLM_SECONDS=60
PROVIDER_TIMEOUT_LLM_STREAM_TTFT_SECONDS=20
PROVIDER_TIMEOUT_STT_SECONDS=90
PROVIDER_TIMEOUT_TTS_SECONDS=90

CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_FAILURE_WINDOW_SECONDS=60
CIRCUIT_BREAKER_OPEN_SECONDS=60
CIRCUIT_BREAKER_HALF_OPEN_PROBE_COUNT=1

# =============================================================================
# Features / Flags
# =============================================================================
ASSESSMENT_ENABLED=false
PIPELINE_MODE=fast
LLM_MODEL_CHOICE=model1
LLM_MODEL1_ID=llama-3.1-8b-instant
LLM_MODEL2_ID=llama-3.3-70b-versatile
BETA_MODE_ENABLED=false
LLM_BACKUP_PROVIDER=gemini
ASSESSMENT_BACKUP_PROVIDER=gemini
