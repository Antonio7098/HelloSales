# API Configuration
API_URL=http://localhost:8000

# ==========================================================================
# WorkOS SSO Configuration (for production)
# ==========================================================================
# Get these from your WorkOS Dashboard: https://dashboard.workos.com/
NEXT_PUBLIC_WORKOS_CLIENT_ID=your_workos_client_id
NEXT_PUBLIC_WORKOS_REDIRECT_URI=http://localhost:3000/auth/workos/callback

# Backend WorkOS credentials (for token exchange)
WORKOS_CLIENT_ID=your_workos_client_id
WORKOS_API_KEY=your_workos_api_key

# Auth Secret (generate with: openssl rand -base64 32)
AUTH_SECRET=your-secret-key-here
