# HelloSales Backend Environment Variables

# Environment
ENVIRONMENT=development
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/hellosales
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Auth (WorkOS)
WORKOS_CLIENT_ID=client_xxx
WORKOS_API_KEY=sk_xxx
WORKOS_ISSUER=https://api.workos.com
WORKOS_AUDIENCE=

# AI Providers
GROQ_API_KEY=gsk_xxx
GOOGLE_API_KEY=
DEFAULT_LLM_PROVIDER=groq
DEFAULT_LLM_MODEL=llama-3.1-8b-instant

# Observability
LOG_LEVEL=INFO
LOG_FORMAT=json
OTEL_ENABLED=false
OTEL_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=hellosales-backend
PROMETHEUS_ENABLED=true

# Stageflow settings
STAGE_TIMEOUT_MS=30000
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_OPEN_SECONDS=60

# Summary settings
SUMMARY_ENABLED=true
SUMMARY_THRESHOLD=8
ALWAYS_INCLUDE_LAST_N=6

# Guardrails
GUARDRAILS_ENABLED=true
