{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@data/*": [
        "data/*"
      ],
      "@theme/*": [
        "theme/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "_components/ui/context.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
